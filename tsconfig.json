{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "allowJs": true,
    "paths": {
      "@controllers/*": ["src/controllers/*"],
      "@config/*": ["src/config/*"],
      "@models/*": ["src/models/*"],
      "@errors/*": ["src/errors/*"],
      "@database/*": ["src/database/*"],
      "@router/*": ["src/router/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
